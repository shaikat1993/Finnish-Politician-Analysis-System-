# Database Configuration
POSTGRES_USER=fpas_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=fpas
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Neo4j Configuration (Local Desktop)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password
NEO4J_DATABASE=neo4j
NEO4J_AUTH=neo4j/your_neo4j_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your_secret_key
API_DEBUG=False
API_ALLOWED_HOSTS=localhost,127.0.0.1
API_BASE_URL=http://localhost:8000

# Frontend Configuration
FRONTEND_PORT=8501

# AI/ML Configuration
OPENAI_API_KEY=your_openai_api_key
HUGGINGFACE_API_KEY=your_huggingface_api_key

# External APIs
EDUSKUNTA_API_KEY=your_eduskunta_api_key
YLE_API_KEY=your_yle_api_key

# Deployment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Monitoring Configuration
# Logging
FPAS_LOG_DIR=./logs
FPAS_LOG_LEVEL=INFO
FPAS_LOG_FORMAT=json
FPAS_LOG_ROTATION_SIZE=10MB
FPAS_LOG_ROTATION_COUNT=5

# Component-specific logging
FPAS_LOG_LEVEL_API=INFO
FPAS_LOG_LEVEL_DATABASE=INFO
FPAS_LOG_LEVEL_DATA_COLLECTION=INFO
FPAS_LOG_LEVEL_AI_PIPELINE=INFO
FPAS_LOG_LEVEL_FRONTEND=INFO

# Health Checks
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_CACHE_TTL=30
HEALTH_CHECK_TIMEOUT=5.0

# Resource Thresholds
DISK_WARNING_THRESHOLD=80.0
DISK_CRITICAL_THRESHOLD=90.0
MEMORY_WARNING_THRESHOLD=80.0
MEMORY_CRITICAL_THRESHOLD=90.0
CPU_WARNING_THRESHOLD=80.0
CPU_CRITICAL_THRESHOLD=90.0
DISK_THRESHOLD=85
MEMORY_THRESHOLD=80
CPU_THRESHOLD=80

# Email Alerting
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=alerts@example.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=alerts@example.com
SMTP_TO=admin@example.com,oncall@example.com

# Slack Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Webhook Alerting
ALERT_WEBHOOK_URL=https://your-webhook-endpoint.com/alerts
ALERT_WEBHOOK_HEADERS={"Authorization":"Bearer your_token","Content-Type":"application/json"}

# Metrics
METRICS_ENABLED=true
METRICS_HISTORY_SIZE=100
SYSTEM_METRICS_INTERVAL=60

# Security Features
ENABLE_WEBSOCKET_MONITORING=False
ENABLE_ANOMALY_DETECTION=False
ENABLE_OPENTELEMETRY=False

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
