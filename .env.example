# This is an example configuration file. Copy to .env and update with your values.

#############################
# Database Configuration
#############################
# PostgreSQL (for future use)
POSTGRES_USER=fpas_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=fpas
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Neo4j Configuration
# For Docker container (default for GitHub users)
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=12345678
NEO4J_DATABASE=fpas-database
NEO4J_AUTH=neo4j/12345678

# Neo4j Memory Settings
NEO4J_PAGECACHE_SIZE=1G
NEO4J_HEAP_INITIAL=512m
NEO4J_HEAP_MAX=1G

#############################
# API Configuration
#############################
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your_secret_key
API_DEBUG=False
API_ALLOWED_HOSTS=localhost,127.0.0.1
API_BASE_URL=http://localhost:8000/api/v1

#############################
# OpenAI Configuration
#############################
OPENAI_API_KEY=your_openai_api_key_here

#############################
# Logging & Monitoring
#############################
FPAS_LOG_LEVEL=INFO
FPAS_LOG_FORMAT=json
FPAS_LOG_DIR=/app/logs

# Alert Configuration (Optional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_TO=
SLACK_WEBHOOK_URL=
ALERT_WEBHOOK_URL=
ALERT_WEBHOOK_HEADERS={}

# System Monitoring
HEALTH_CHECK_INTERVAL=60
CPU_THRESHOLD=80
MEMORY_THRESHOLD=80
DISK_THRESHOLD=85

#############################
# Data Collection
#############################
ENRICH_LIMIT=5